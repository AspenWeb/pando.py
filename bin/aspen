#        raise NotImplementedError("Sorry, no access logging yet :(")
#
#    if config.log_error is not None:
#        d,f = os.path.split(config.log_error)
#        if not os.path.isdir(d):
#            os.makedirs(d)
#        sys.stdout = sys.stderr = open(config.log_error, 'a+', 0)
#
